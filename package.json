{
    "name": "purs-keybindings",
    "displayName": "PureScript typed hole keybindings",
    "description": "Insert or remove typed holes via keybindings",
    "publisher": "br4ch1st0chr0n3",
    "version": "0.0.1",
    "repository": {
        "type": "git",
        "url": "https://github.com/br4ch1st0chr0n3/vscode-purs-keybindings"
    },
    "engines": {
        "vscode": "^1.68.0"
    },
    "categories": [
        "Keymaps"
    ],
    "icon": "images/avatar.png",
    "contributes": {
        "keybindings": [
            {
                "key": "ctrl+alt+z",
                "when": "editorHasSelection",
                "command": "extension.multiCommand.execute",
                "args": {
                    "sequence": [
                        {
                            "command": "editor.action.insertSnippet",
                            "args": {
                                "snippet": "(${TM_SELECTED_TEXT} :: ?_)"
                            }
                        },
                        {
                            "command": "cursorLeft"
                        }
                    ]
                }
            },
            {
                "key": "ctrl+alt+z",
                "when": "editorTextFocus && !editorHasSelection",
                "command": "extension.multiCommand.execute",
                "args": {
                    "sequence": [
                        {
                            "command": "editor.action.addSelectionToNextFindMatch"
                        },
                        {
                            "command": "extension.multiCommand.execute",
                            "args": {
                                "sequence": [
                                    {
                                        "command": "editor.action.insertSnippet",
                                        "args": {
                                            "snippet": "(${TM_SELECTED_TEXT} :: ?_)"
                                        }
                                    },
                                    {
                                        "command": "cursorLeft"
                                    }
                                ]
                            }
                        }
                    ]
                }
            },
            {
                "key": "ctrl+alt+x",
                "when": "editorTextFocus",
                "command": "extension.multiCommand.execute",
                "args": {
                    "sequence": [
                        {
                            "command": "extension.selectParenthesisOuter"
                        },
                        {
                            "command": "editor.action.insertSnippet",
                            "args": {
                                "snippet": "${TM_SELECTED_TEXT/\\((.*) :: \\?_\\)/$1/}"
                            }
                        }
                    ]
                }
            }
        ]
    },
    "extensionDependencies": [
        "ryuta46.multi-command",
        "dbankier.vscode-quick-select"
    ]
}